<%- include ('../../partials/header') %> 
<%- include ('../../partials/adminNavBar') %> 
<div class="container">
    <h2 class="mb-3">Clientes</h2>
    <a href="/admin/clients/new"  class="btn btn-success mb-3 ">Cadastrar Cliente</a>
    <table class="table table-striped table-bordered ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Telefone</th>
                <th>Endereço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% clients.forEach(client => { %>
                <tr>
                    <td><%= client.id %></td>
                    <td><%= client.nome %></td>
                    <td><%= client.cpf %></td>
                    <td><%= client.telefone %></td>
                    <td><%= client.endereco %></td>
                    <td>
                        <a href="/admin/clients/edit/<%= client.id %>" class="btn btn-warning">Editar</a>
                        
                        <form method="post" action="/clients/delete" style="display: inline;" onsubmit="confirmar_delecao(event, this)">
                            <input type="hidden" name="id" value="<%= client.id %>">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script>
    function confirmar_delecao(event, form) {
        event.preventDefault()
        let decisao = confirm("Deseja realmente excluir o produto?")
        
        if(decisao) {
            form.submit()
        }
    }
</script>
