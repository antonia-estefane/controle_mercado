<%- include ('../../partials/header') %> 
<%- include ('../../partials/adminNavBar') %> 

<div class="container ">
    <h2 class="m-4 ">Edição de Produto</h2>
    <form class="m-4 " action="/products/update" method="post">
        <input type="hidden" name="id" value="<%= product.id %>">
        <div class="form-group">
          <label for="nome_produto">Nome do Produto</label>
          <input type="text" class="form-control" id="nome_produto" name="nome_produto" placeholder="Nome do produto" value="<%= product.nome_produto %>">
        </div>
        <div class="row">
            <div class="col">
              <label for="preco_venda">Preço de venda</label>
              <input type="number" step="0.01" class="form-control" placeholder="Preço de venda" id="preco_venda" name="preco_venda" value="<%= product.preco_venda %>">
            </div>
            <div class="col">
                <label for="preco_custo">Preço de custo</label>
                <input type="number" step="0.01" class="form-control" placeholder="Preço de custo"  id="preco_custo" name="preco_custo" value="<%= product.preco_custo %>">
            </div>
        </div>
        <div class="row">
            <div class="col">
              <label for="qtd_estoque">Quantidade em estoque</label>
              <input type="number" class="form-control" placeholder="Ex: 356" id="qtd_estoque" name="qtd_estoque"
              value="<%= product.qtd_estoque %>">
            </div>
            <div class="col">
                <label for="categoria">Categoria</label>
                <!-- <select id="categoria" name="categoria" class="form-control">
                    <option selected>Escolher...</option>
                    <option>...</option>
                </select> -->
            <input type="text" class="form-control" id="categoria" name="categoria" placeholder="categoria"
            value="<%= product.categoria %>">

            </div>
          </div>
        <div class="form-group">
          <label for="fornecedor">Fornecedor</label>
          <input type="text" class="form-control" id="fornecedor" name="fornecedor" placeholder="Fornecedor"
          value="<%= product.fornecedor %>">
        </div>
        <button type="submit" class="btn btn-success ">Atualizar produto</button>
        <a href="/admin/products" class="btn btn-danger ">Cancelar</a> 
      </form>
</div>

<%- include ('../../partials/footer') %> 
