<%- include ('../../partials/header') %> 
<%- include ('../../partials/adminNavBar') %> 
<div class="container">
    <h2 class="mb-3">Categorias</h2>
    <a href="/admin/categories/new"  class="btn btn-success mb-3 ">Cadastrar Categoria</a>
    <table class="table table-striped table-bordered ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Slug</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <td><%= category.id %></td>
                    <td><%= category.nome %></td>
                    <td><%= category.slug %></td>
                    <td>     
                        <a
                        href="/admin/categories/edit/<%= category.id %>"
                        class="btn btn-warning"
                      >
                        Editar
                      </a>                  
                    <form method="post" action="/categorias/delete" style="display: inline;" onsubmit="confirmar_delecao(event, this)">
                        <input type="hidden" name="id" value="<%= category.id %>">
                        <button class="btn btn-danger">Excluir</button>
                    </form>
                    </td>

                    
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script>
    function confirmar_delecao(event, form) {
        event.preventDefault()
        let decisao = confirm("Deseja realmente excluir o usu√°rio?")
        
        if(decisao) {
            form.submit()
        }
    }
</script>
