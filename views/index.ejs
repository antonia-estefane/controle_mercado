<%- include ('partials/header') %> 
<%- include ('partials/adminNavBar') %> 
<div class="container">
    <div class="w-100 row">
        <% products.forEach(product=> { %>
            <div class="p-2 col-sm-6 col-md-4 col-lg-3">
                <div class="card w-100">
                    <img src="<%= product.foto %>" class="card-img-top object-fit-cover w-100" alt="<%= product.nome_produto %>" width="250" height="250">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= product.nome_produto %>
                        </h5>
                        <div class="row">
                            <p class="card-text col"><strong>Preço de custo:</strong> R$ <%= product.preco_custo %></p>
                            <p class="card-text col"><strong>Preço de venda:</strong> R$ <%= product.preco_venda %></p>
                        </div>
                        <div class="row">
                            <p class="card-text col"><strong>Estoque:</strong> <%= product.qtd_estoque %></p>
                        </div>
                    </div>
        
                 </div>
            </div>
        <%})%>
